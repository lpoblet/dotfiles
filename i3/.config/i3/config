# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	# left monitor
	output DP-1
        
	#status_command i3status
	status_command i3blocks -c ~/.config/i3blocks/i3blocks_left_mon.conf

	position top
	
	# remove tray icons (TODO: prevent them from loading in first place)
	tray_output none

	colors {
		background $bg-color
		separator #757575
		#			border			background		text
		focused_workspace	$bg-color		$bg-color		$text-color
		inactive_workspace	$inactive-bg-color	$inactive-bg-color	$inactive-text-color
		urgent_workspace	$urgent-bg-color	$urgent-bg-color	$text-color
	}
}

bar {
	# right monitor
	output HDMI-0

	#status_command i3status
	status_command i3blocks -c ~/.config/i3blocks/i3blocks_right_mon.conf

	position top

	# remove tray icons (TODO: prevent them from loading in first place)
	tray_output none

	colors {
