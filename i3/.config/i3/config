# Set wallpaper
exec_always feh --bg-scale ~/Pictures/wallpaper.jpg

# Change monitore's order
exec_always xrandr --output HDMI-0 --auto --right-of DP-1

# Force workspaces to load in correct monitor (after previous line changed the order)
workspace $ws1 output DP-1
workspace $ws2 output DP-1
workspace $ws3 output DP-1
workspace $ws4 output DP-1
workspace $ws5 output HDMI-0
workspace $ws6 output HDMI-0
workspace $ws7 output HDMI-0
workspace $ws8 output HDMI-0

